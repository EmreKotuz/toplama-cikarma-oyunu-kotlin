<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".testSayfasi">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="889dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/yarisma"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@mipmap/yarisma"
                android:fontFamily="@font/capriola"
                android:gravity="center"
                android:text="Yarışma"
                android:textColor="#FFFFFF"
                android:textSize="43sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView42"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/hesapla"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@mipmap/yazarak"
                android:fontFamily="@font/capriola"
                android:gravity="center"
                android:text="Yazarak Öğren"
                android:textColor="#FFFFFF"
                android:textSize="43sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView46"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/toplama"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@mipmap/toplama"
                android:fontFamily="@font/capriola"
                android:gravity="center"
                android:text="Toplama (+)"
                android:textColor="#FFFFFF"
                android:textSize="43sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cikarma"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@mipmap/cikarma"
                android:fontFamily="@font/capriola"
                android:gravity="center"
                android:text="Çıkarma (-)"
                android:textColor="#FFFFFF"
                android:textSize="43sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/egitim"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@mipmap/egitim"
                android:fontFamily="@font/capriola"
                android:gravity="center"
                android:text="Eğitim"
                android:textColor="#FFFFFF"
                android:textSize="43sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView49"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>