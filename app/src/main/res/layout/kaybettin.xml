<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/gecis"
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:background="#3F51B5"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/uyariMesaj3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/candal"
            android:text="Buraya Kadar"
            android:textAlignment="center"
            android:textColor="@color/purple_200"
            android:textSize="36sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/textView28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/skorGoster"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginLeft="17dp"
            android:fontFamily="@font/candal"
            android:text="Skorun = 3000"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="28dp" />

        <TextView
            android:id="@+id/dereceText"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="17dp"
            android:fontFamily="@font/candal"
            android:gravity="center"
            android:paddingLeft="-10dp"
            android:text="Dereceye Gİrdiniz!!!"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/boslukUc"
            android:layout_width="match_parent"
            android:layout_height="28dp" />

        <EditText
            android:id="@+id/isimEkle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/white"
            android:ems="10"
            android:gravity="center"
            android:hint="Lakabınız ya da isiminiz"
            android:inputType="textPersonName"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/boslukiki"
            android:layout_width="match_parent"
            android:layout_height="28dp" />

        <TextView
            android:id="@+id/kullaniciKaydet"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#2196F3"
            android:fontFamily="@font/candal"
            android:gravity="center"
            android:text="Kaydet"
            android:textColor="#FFFFFF"
            android:textSize="42sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/boslukBir"
            android:layout_width="match_parent"
            android:layout_height="28dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/menuGecbaba"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/rastgelebtn"
                android:src="@drawable/menu" />

            <TextView
                android:id="@+id/textView113"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/liste"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@drawable/rastgelebtn"
                android:src="@drawable/siralama" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/tekrarlaGardas"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="23dp"
                android:layout_weight="1"
                android:background="@drawable/rastgelebtn"
                android:src="@drawable/tekrar" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>